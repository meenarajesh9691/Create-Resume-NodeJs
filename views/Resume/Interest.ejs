

<%- include('../../partials/header')%>

<div class="education-container  ">

    <h1 class="fs-3 p-2 w-25 alert alert-success text-center mt-3">INTEREST</h1>
    
    <div class="education-form w-100 ps-5 ">
        <img  style="height: 14em;" src="./images/frantedimg/interest-img.png" alt="">

        <form action="/add-interest" method="post" class="signin-box container">
            <textarea name="interest" id="" cols="100" rows="5" placeholder="Enter Interest"></textarea>
        
         <button class=" btn btn-primary fs-5">ADD</button>
        </form>
    </div>
</div>

<hr>
<div class="d-flex flex-wrap ms-2">
    <% user.interest.forEach((int, i)=> { %>
        <div class="card me-3 mb-3" style="width: 18rem">
            <div class="card-body">
                <h5 class="card-title">
                    <%= int.interest%>
                </h5>
              

                <a href="/delete-interest/<%= i%>" class="card-link">Remove</a>
            </div>
        </div>
        <% })%>
</div>

<%- include('../../partials/footer')%>
